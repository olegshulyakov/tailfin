{
    "name": "tailfin",
    "version": "1.0.0",
    "description": "Minimalist, production-based theme for Jellyfin.",
    "scripts": {
        "build:core": "postcss src/main.css -o dist/tailfin.css",
        "build:palettes": "postcss src/palettes/*.css -d dist/palettes/",
        "build:fonts": "postcss src/fonts/*.css -d dist/fonts/",
        "build": "npm run build:core && npm run build:palettes && npm run build:fonts",
        "watch": "postcss src/main.css -o dist/tailfin.css --watch"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.0",
        "postcss": "^8.4.0",
        "postcss-cli": "^11.0.0",
        "postcss-import": "^16.0.0",
        "postcss-nested": "^6.0.0",
        "tailwindcss": "^3.4.0"
    }
}